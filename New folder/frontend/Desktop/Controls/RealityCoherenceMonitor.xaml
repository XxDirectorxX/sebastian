<UserControl x:Class="Sebastian.Controls.RealityCoherenceMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <TextBlock Text="Reality Coherence" FontSize="18"/>
            <ProgressBar x:Name="CoherenceBar" Height="20" 
                        Value="{Binding CoherenceValue}"
                        Maximum="1.618033988749895"/>
            <TextBlock Text="{Binding FieldStrength}" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>
